<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp">


    <LinearLayout
        android:id="@+id/layoutForMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_chat"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/extra_background"
            app:cardCornerRadius="@dimen/_5sdp">

            <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                android:id="@+id/imageView_senderImage"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_150sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/user"
                android:visibility="gone" />


            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/audioPlayer"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:visibility="gone"
                app:shutter_background_color="@color/extra_background"
                />

            <com.google.android.exoplayer2.ui.StyledPlayerView
                android:id="@+id/videoPlayer"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_250sdp"
                android:background="@color/black"
                app:resize_mode="fill"
                app:hide_on_touch="true"
                app:player_layout_id="@layout/exo_player_view"
                app:shutter_background_color="@color/black"
                app:use_controller="true"
                app:show_timeout="3000"
                app:surface_type="surface_view"
                android:visibility="gone"
                />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_12sdp"
                android:theme="@style/CircularProgress"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView_senderMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_9sdp"
            android:text="Sender Message will display here"
            android:textColor="@color/mode"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_senderMessage_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:alpha="0.5"
                android:padding="@dimen/_5sdp"
                android:text="20:08"
                android:textColor="@color/mode"
                android:textSize="@dimen/_10sdp" />
            <!--<ImageView
                android:id="@+id/tick_1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"
                android:alpha="0.4"
                android:visibility="gone"
                app:tint="@color/mode"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                />
            <ImageView
                android:id="@+id/tick_2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick"
                android:alpha="0.4"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_minus15sdp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/unsend_message"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_watch"
                app:tint="@color/main_color"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:visibility="visible"
                />-->

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>