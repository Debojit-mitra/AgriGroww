<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mode_inverse">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_identify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/recyclerView_relative_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/extra_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card1"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:elevation="10dp"
                app:cardCornerRadius="12dp">

                <ImageView
                    android:id="@+id/plant_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:theme="@style/CircularProgress"
                    />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/textview_plant_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card1"
                android:text="@string/score"
                android:textSize="@dimen/_11sdp"
                android:fontFamily="@font/acme"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/plant_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:fontFamily="@font/acme"
                android:layout_toEndOf="@+id/textview_plant_score"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/textview_scientific_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card1"
                android:layout_below="@+id/plant_score"
                android:text="@string/scientific_nname"
                android:fontFamily="@font/acme"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/scientific_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_below="@+id/plant_score"
                android:fontFamily="@font/acme"
                android:layout_toEndOf="@+id/textview_scientific_name"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/textview_common_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card1"
                android:fontFamily="@font/acme"
                android:layout_below="@+id/textview_scientific_name"
                android:text="@string/common_nname"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/common_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:fontFamily="@font/acme"
                android:layout_below="@+id/textview_scientific_name"
                android:layout_toEndOf="@+id/textview_common_name"

                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/textview_detected_organ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_toEndOf="@+id/card1"
                android:fontFamily="@font/acme"
                android:layout_below="@+id/textview_common_name"
                android:text="@string/biological_source"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detected_organ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:fontFamily="@font/acme"
                android:layout_below="@+id/textview_common_name"
                android:layout_toEndOf="@+id/textview_detected_organ"
                android:text="Leaf"
                android:textSize="@dimen/_11sdp" />

            <ProgressBar
                android:id="@+id/progressBarBs"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
               android:layout_centerInParent="true"
                android:visibility="gone"
                android:theme="@style/CircularProgress"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>