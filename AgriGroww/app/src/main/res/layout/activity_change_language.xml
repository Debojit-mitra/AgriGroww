<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_inverse"
    tools:context=".ChangeLanguageActivity">

    <TextView
        android:id="@+id/textview_change_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_language"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_70sdp"
        android:textSize="@dimen/_30sdp"
        android:fontFamily="@font/acme"
        android:textColor="@color/mode"
        />
    <Spinner
        android:id="@+id/selectLanguageFromSpinner"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/textview_change_language"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        />
    <Button
        android:id="@+id/button_select_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:text="@string/continue_btn"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_below="@+id/selectLanguageFromSpinner"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        />


</RelativeLayout>