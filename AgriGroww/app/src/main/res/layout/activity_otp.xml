<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_inverse"
    tools:context=".OtpActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/otp_animationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_fileName="girl_otp.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textView_otp_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter OTP to verify"
        android:layout_below="@+id/otp_animationView"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:fontFamily="@font/acme"
        android:textStyle="bold"
        android:textColor="@color/mode"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/textView_otp_Sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP will be sent to +918876708209"
        android:layout_below="@+id/textView_otp_verify"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:fontFamily="@font/acme"
        android:layout_marginTop="5dp"
        />

