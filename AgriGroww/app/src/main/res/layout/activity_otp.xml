    <com.otpview.OTPTextView
        android:id="@+id/otpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mode"
        app:otp_text_size="@dimen/_18sdp"
        app:otp_box_background="@drawable/bg_otp_box"
        app:otp_box_background_active="@drawable/bg_otp_box_active"
        app:otp_box_background_inactive="@drawable/bg_otp_box_inactive"
        app:otp_box_background_error="@drawable/bg_otp_box_error"
        app:otp_box_background_success="@drawable/bg_otp_box_success"
        app:hide_otp_drawable="@drawable/bg_otp_box_hide"
        app:height="@dimen/_35sdp"
        app:width="@dimen/_35sdp"
        app:box_margin="@dimen/_5sdp"
        app:hide_otp="false"
        app:length="6"
        app:otp=""
        android:layout_below="@+id/textView_otp_Sent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        />

