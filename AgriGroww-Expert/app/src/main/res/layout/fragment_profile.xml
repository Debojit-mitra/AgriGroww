<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mode_inverse"
    tools:context=".fragments.profileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/animatedImageCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:cardCornerRadius="@dimen/_7sdp">

                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/animatedImageBackground"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/backgrounds/scenic[0]"
                    android:alpha="0.7" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp"
                    android:clickable="false"
                    android:src="@drawable/linear_gradient_bg"
                    tools:ignore="ContentDescription" />
            </com.google.android.material.card.MaterialCardView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:clickable="false"
                android:src="@drawable/linear_gradient_bg"
                android:elevation="1dp"
                android:layout_below="@+id/animatedImageCardView"
                android:layout_marginTop="@dimen/_minus28sdp"
                tools:ignore="ContentDescription" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_image_card"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <ozaydin.serkan.com.image_zoom_view.ImageViewZoom
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"/>
-->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:theme="@style/CircularProgress"
                    />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toEndOf="@+id/profile_image_card"
                android:fontFamily="@font/acme"
                android:maxHeight="145dp"
                android:elevation="@dimen/_12sdp"
                android:textAlignment="center"
                android:textColor="@color/mode"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/textview_profile_phNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_card"
                android:layout_marginStart="@dimen/_17sdp"
                android:elevation="@dimen/_12sdp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:text="@string/phone_no"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/profile_phNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_image_card"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:elevation="@dimen/_12sdp"
                android:layout_toEndOf="@+id/textview_profile_phNumber"
                android:fontFamily="@font/acme"
                android:text=""
                android:textColor="@color/mode"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/textview_profile_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_profile_phNumber"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="10dp"
                android:elevation="@dimen/_12sdp"
                android:fontFamily="@font/acme"
                android:text="@string/unique_id"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/profile_userId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview_profile_phNumber"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:elevation="@dimen/_12sdp"
                android:maxLines="2"
                android:layout_toEndOf="@+id/textview_profile_userId"
                android:fontFamily="@font/acme"
                android:text="@string/userid"
                android:textColor="@color/mode"
                android:visibility="gone"
                />

            <ImageButton
                android:id="@+id/profile_userId_copy_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@id/profile_userId"
                android:layout_below="@+id/textview_profile_phNumber"
                android:layout_marginTop="12dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:elevation="@dimen/_12sdp"
                android:layout_toEndOf="@+id/profile_userId"
                android:background="@color/extra_background"
                android:src="@drawable/ic_content_copy"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textview_profile_dateJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_userId"
                android:layout_marginStart="@dimen/_17sdp"
                android:layout_marginTop="10dp"
                android:elevation="@dimen/_12sdp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/acme"
                android:text="@string/date_join"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/profile_dateJoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_userId"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"
                android:elevation="@dimen/_12sdp"
                android:layout_toEndOf="@+id/textview_profile_dateJoin"
                android:fontFamily="@font/acme"
                android:text="@string/date_join"
                android:textColor="@color/mode"
                android:textSize="@dimen/_12sdp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card1"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_edit_profile"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_edit_profile"/>

            <TextView
                android:id="@+id/textview_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:text="@string/edit_profile"
                android:layout_toEndOf="@+id/icon_edit_profile"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/mode" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_give_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_give_feedback"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_feedback"/>

            <TextView
                android:id="@+id/textview_give_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/icon_give_feedback"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:text="@string/give_feedback"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/give_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/mode" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card3"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_change_language"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_changeLanguage"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_language"/>

            <TextView
                android:id="@+id/textview_changeLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/icon_changeLanguage"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:text="@string/change_language"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/changeLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/mode" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card4"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/mode" />

            <ImageView
                android:id="@+id/icon_settings"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_settings"/>

            <TextView
                android:id="@+id/textview_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/icon_settings"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:text="@string/settings"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card5"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="@dimen/_60sdp"
        app:cardBackgroundColor="@color/extra_background"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:id="@+id/relative_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@color/mode" />

            <ImageView
                android:id="@+id/icon_logout"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="10dp"
                android:alpha="0.9"
                android:background="@color/extra_background"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_logout"/>

            <TextView
                android:id="@+id/textview_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/icon_logout"
                android:fontFamily="@font/acme"
                android:padding="5dp"
                android:text="@string/logout"
                android:textColor="@color/mode"
                android:textSize="@dimen/_14sdp" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</ScrollView>