<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/extra_background"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/custom_animationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_fileName="account_created.json"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:layout_centerHorizontal="true"
        />

    <Spinner
        android:id="@+id/selectFromSpinner"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/custom_animationView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_spinner"
        android:spinnerMode="dropdown"
        android:popupBackground="@drawable/background_spinner"
        android:layout_margin="@dimen/_10sdp"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/selectFromSpinner_dropdown"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_2sdp"
        android:layout_alignEnd="@+id/selectFromSpinner"
        android:src="@drawable/ic_drop_down"
        android:layout_alignTop="@+id/selectFromSpinner"
        android:visibility="gone"
        app:tint="@color/mode"
        />

    <TextView
        android:id="@+id/custom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectFromSpinner"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/acme"
        android:textAlignment="center"
        android:textColor="@color/mode"
        android:textSize="@dimen/_15sdp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_textview"
        android:gravity="center"
        >

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/mode"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />
    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/mode"
        style="?android:attr/borderlessButtonStyle"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        />

    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:theme="@style/CircularProgress"
        android:layout_centerInParent="true"
        />


</RelativeLayout>