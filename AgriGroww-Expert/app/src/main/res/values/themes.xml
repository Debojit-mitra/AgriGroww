<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AgriGrowwExpert" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#22AC29</item>
        <item name="colorPrimaryVariant">#22AC29</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#22AC29</item>
        <item name="colorSecondaryVariant">#22AC29</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

