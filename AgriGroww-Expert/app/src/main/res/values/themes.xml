    <style name="Theme.AgriGroww.ChatActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#22AC29</item>
        <item name="android:statusBarColor">@color/extra_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.AgriGroww.Splash_Screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#22AC29</item>
        <item name="android:statusBarColor">@color/mode_inverse</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">10dp</item>
        <!--<item name="android:textColor">@color/black</item>-->
    </style>

    <style name="CircularProgress" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/progress_bar</item>
    </style>

    <style name="Theme.AgriGroww.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#22AC29</item>
        <item name="android:statusBarColor">@color/mode_inverse</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlActivated">@color/splash_logo</item>
    </style>

    <style name="Theme.AgriGroww.button_red" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#BF0000</item>
    </style>

    <!--bottom sheet dialog-->
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_15sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_15sdp</item>
    </style>
    <!--bottom sheet dialog-->
</resources>